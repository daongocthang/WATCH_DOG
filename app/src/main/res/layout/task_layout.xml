<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/stackSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:text="@string/sample_word"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stackShortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stackSymbol"
            android:layout_marginStart="8dp"
            android:text="@string/sample_word"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/stackType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stackSymbol"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="4dp"
            android:text="@string/sample_word"
            android:textColor="@color/warning_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stackWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stackSymbol"
            android:layout_toEndOf="@+id/stackType"
            android:text="@string/sample_digit"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/stackLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stackSymbol"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="@string/sample_digit"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>